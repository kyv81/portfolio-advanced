extends ../template 

block variables
    - var title = 'Главная'

block content 
    .wrapper.intro
        .auth
            button.auth__button 
                span.auth__text Авторизоваться
        .flip-effect
            .front   
                .welcome
                    .welcome__pic
                        img(src="./img/content/my_photo.jpg").welcome__img
                    .welcome__desc 
                        .welcome__desc-title Юрий Курбаков 
                        .welcome__desc-txt Личный сайт веб разработчика
                    ul.socials
                        li.socials__item
                            a(href="https://vk.com/ykurbakov" target="_blank").socials__link
                                svg(width="30", height="17").socials__icon.icon-vk 
                                    use(xlink:href="img/icons/sprite.svg#vk") 
                        li.socials__item
                            a(href="https://github.com/kyv81" target="_blank").socials__link
                                svg(width="26", height="22").socials__icon.icon-github 
                                    use(xlink:href="img/icons/sprite.svg#github")
                        li.socials__item 
                            a(href="https://www.facebook.com/profile.php?id=100009954705314" target="_blank").socials__link
                                svg(width="24", height="23").socials__icon.icon-in
                                    use(xlink:href="img/icons/sprite.svg#in")                      
                    ul.welcome__list
                        li.welcome__item    
                            a(href="works.html").welcome__link Мои работы
                        li.welcome__item
                            a(href="about.html").welcome__link Обо мне
                        li.welcome__item  
                            a(href="blog.html").welcome__link Блог
            .back
                form.form-auth 
                    .auth-form
                        .auth-form__fields
                            .auth-form__title
                                .block-subtitle Авторизуйтесь
                            .auth-form__row
                                label(for="user-login").auth-form__login-label
                                .auth-form__login-wrap
                                    .auth-form__login-icon
                                        i.fa.fa-user.user-icon 
                                    input(type="text" placeholder="Логин" name="user-login").auth-form__login-input
                            .auth-form__row       
                                label(for="user-password").auth-form__password-label
                                .auth-form__password-wrap
                                    .auth-form__password-icon
                                        i.fa.fa-key.key-icon
                                    input(type="password" placeholder="Пароль" name="user-password").auth-form__password-input
                            .auth-form__row    
                                .auth-form__checkbox
                                    input(type="checkbox")#check.auth-form__check-input
                                    label(for="check").auth-form__check-label Я человек
                            .auth-form__row
                                .auth-form__radio-buttons
                                    label.auth-form__radio
                                        input(type="radio" name="robot").auth-form__radio-elem
                                        .auth-form__radio-fake
                                        .auth-form__radio-title Да
                                    label.auth-form__radio
                                        input(type="radio" name="robot").auth-form__radio-elem
                                        .auth-form__radio-fake
                                        .auth-form__radio-title Нет
                        .auth-form__btns
                            button(type="button" name="main" value="На главную").auth-form__button-main На главную
                            button(type="button" name="enter" value="Войти").auth-form__button-enter Войти


