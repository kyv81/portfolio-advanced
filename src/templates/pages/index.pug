                            use(xlink:href="img/icons/sprite.svg#github")
                li.socials__item 
                    a(href="https://www.facebook.com/profile.php?id=100009954705314" target="_blank").socials__link
                        svg(width="24", height="23").socials__icon.icon-in
                            use(xlink:href="img/icons/sprite.svg#in")                      
            ul.welcome__list
                li.welcome__item    
                    a(href="works.html").welcome__link Мои работы
                li.welcome__item
                    a(href="about.html").welcome__link Обо мне
