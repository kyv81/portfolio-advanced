extends ../template 

block variables 
    - var title = "Обо мне"

block content 
    .wrapper
        .triangles
            svg.triangle__block(xmlns="http://www.w3.org/2000/svg"
                        viewbox="0 0 1000 85"
                        preserveaspectratio="none")
                polygon.triangle__left(points="0,0 0,86 500.8,86 500.8,75.5")
                polygon.triangle__right(points="1000,0 1000,86 500,86 500,75.5")
        include ../common/header.pug    
        
        section.section.about
            .about__columns
                .about__left
                    .about__left-title
                        img(src="img/bg/about_header.svg").about__left-pic
                        .block-title Обо мне
                    .about__left-content
                        .user-desc
                            .user-desc__img
                                img(src="img/content/my_photo2.jpg").user-desc__avatar
                            .user-desc__title
                                img(src="img/content/rect.svg").rectangle
